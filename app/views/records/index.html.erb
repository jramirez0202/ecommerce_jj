

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.records.each do |user| %>
      <tr>
        <td><%=user.records.name %></td>
        <td><%= link_to 'Show', @record %></td>
        <td><%= link_to 'Edit', edit_record_path(@records) %></td>
        <td><%= link_to 'Destroy', @record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

