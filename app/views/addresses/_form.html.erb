<div class="container">


	<div class="card mt-5">

		<div class= card-header>
			<h3 class="text text-secondary">Formulario direcciones</h3>
		</div>

		<div class="card-body">
		<%= form_with(model: address, remote: true) do |form| %>
    <% if address.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

        <ul>
        <% address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

	<div class="form-group row">
		<%= form.label :fullname, 'Nombre:', class:'col-sm-2' %>
		<div class= "col-sm-4">
			<%= form.text_field :fullname, class:'form-control' %>
		</div>
	</div>


	<div class="form-group row">
			<%= form.label :email, class:'col-sm-2' %>
		<div class= "col-sm-4">
			<%= form.email_field :email, class:'form-control' %>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label :city, class:'col-sm-2' %>
		<div class= "col-sm-4">
			<%= form.text_field :city, class:'form-control' %>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label :comuna, class:'col-sm-2' %>
		<div class= "col-sm-4">
		<%= form.text_field :comuna, class:'form-control' %>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label :street, class:'col-sm-2' %>
		<div class= "col-sm-4">
		<%= form.text_field :street, class:'form-control' %>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label :number, class:'col-sm-2'  %>
		<div class= "col-sm-4">
		<%= form.text_field :number, class:'form-control' %>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label :phone, class:'col-sm-2' %>
		<div class= "col-sm-4">
		<%= form.text_field :phone, class:'form-control' %>
		</div>
	</div>

	<div class="actions">
			<%= form.submit %>
	</div>

	<% end %>
			</div>

	</div>






</div>










 