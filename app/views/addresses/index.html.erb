

<h1>Addresses</h1>

<table id= "addresses">
  <thead>
    <tr>
      <th>Fullname</th>
      <th>City</th>
      <th>Comuna</th>
      <th>Street</th>
      <th>Number</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= form_with do |form| %>
  
  <div class="field">
    <ul>
      <%= form.label :Address %>
      <%= form.collection_select :address_id, Address.all, :id, :street %>
    </ul>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>
  
  <%= render @addresses%>
  </tbody>
</table>

<div id="new-address">
  <%= link_to 'Agregar direccion de envio', new_address_path, remote: true %>
</div>
