

<h1>Addresses</h1>

<table id='addresses'>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>City</th>
      <th>Comuna</th>
      <th>Street</th>
      <th>Number</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= form_with(scope: 'address') do |f| %>
  <div class="field">
    <ul>
      <%= f.label :Address %>
      <%= f.select :id, @addresses.map { |c| [c.street, c.id] }%>
    </ul>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
  
  <%= render @addresses%>
  </tbody>
</table>

<div id='new-address'>
  <%= link_to 'Agregar direccion de envio', new_address_path, remote: true %>
</div>
<br>

