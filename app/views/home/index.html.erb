  <div>
    <%= render "shared/carrusel" %>
  </div>


<div class="row container-row">
  <div class="col-md-8 offset-2">
    <div class="container">
    <div class="sale">Ofertas</div>
      <div class="row">
        <% @products.each do |product| %>
            <% product.categories.sort.each do |categories| %>
              <div class="col-md-3 cards">
                <div class="card">
                  <img class="card-img-top" src="https://www.panafoto.com/media/catalog/product/cache/6517c62f5899ad6aa0ba23ceb3eeff97/1/3/135129.jpg" alt="imagen"/>
                  <div class="card-block">
                    <h4 class="card-title"> <%= product.name %></h4>
                    <div class="card-text">
                      <div class="badge badge-primary"><%= categories.name if product.category_ids %></div>
                      <div>$<%= product.price %></div>
                      <!--El stock no deberia de verlo el comprador-->
                      <div>Sku:<%= product.sku %></div>
                      <% product.scores.sort.each do |score| %>
                      <div class="star-rating" data-score= <%= @average_score %> ></div>
                      <% end %>
                    </div>
                  <div class="row float-right">
                    <div class="col-md-12">
                      <%= form_for :cart, url: cart_path, method: :put do |f| %>
                        <%= f.hidden_field :product_id, value: product.id %>
                        <%= f.hidden_field :quantity, value: 1 %>
                        <%= f.submit "Add to cart", notice: "Agregado al carrito "%>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


  <div class="category-index">
    <%= render "categories/index" %>
  </div>



<script>
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>