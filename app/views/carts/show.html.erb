<div class="card">
    <div class="card-header bg-dark text-light">
        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
        <a href="<%= root_url%>" class="btn btn-outline-info btn-sm pull-right">Continue Shopping</a>
        <div class="clearfix"></div>
    </div>
    <div class="card-body">
      <% @order.order_items.includes(:product).each do |order_item| %>
        <div class="row">
            <div class="col-xs-2 col-md-2">
                <%= image_tag order_item.product.image.url(:thumb)%>
            </div>
            <div class="col-xs-4 col-md-6">
              <h4 class="product-name"><strong><%= order_item.product.name %></strong></h4>
              <h4><small> <%= order_item.product.description %></small></h4>
            </div>
            <div class="col-xs-6 col-md-4 row">
                <div class="col-xs-6 col-md-6 text-right" style="padding-top: 5px">
                  <h6><strong><%= order_item.price%> <span class="text-muted">x</span></strong></h6>
                </div>
                <div class="col-xs-4 col-md-4">
                  <%= order_item.quantity %>
                </div>
                <div class="col-xs-2 col-md-2">
                <%= @order.created_at%>
                </div>
            </div>
            <div>
              <%= link_to 'Destroy', order_item_path(order_item.id), remote: true, method: :delete, class: "btn btn-primary", data: { confirm: 'Are you sure?' } %>
            </div>
        </div>
        <% end %>

        <% if @order.total  %>
          <div class="card-footer">
            <%= link_to 'Pagar', pay_with_paypal_cart_path, method: :post, class: 'btn btn-primary pull-rigth' %>
            <div class= 'pull-rigth' style= 'margin: 5px'>
              Total: $<b><%= @order.total %></b>
            </div>
            <% else %>
            <p>Tu carrito esta vacio</p>
            <% end %>
          </div>
    
        </div>

