<div class="container-product">
  <h1 class="title-product">Products</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Stock</th>
        <th>Description</th>
        <th>price</th>
        <th>Sku</th>
        <th>Producto</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
          <% product.categories.each do |category| %>
        <tr>
            <td><%= product.name %></td>
            <td><%= category.name %></td>
            <td><%= product.stock %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%= product.sku %></td>
            <td><%= link_to 'Ver Producto', product,  class: 'btn btn-primary pull-rigth btn-search'  %></td>
          <% if user_signed_in? && current_user.role =="moderador" %>
            <td><%= link_to 'Destroy', product, remote: true, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-primary pull-rigth btn-search' %></td>
          <% end %>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
                <% if user_signed_in? && current_user.role =="moderador"%>
                  <td><%= link_to 'New Product', new_product_path, remote: true, class: 'btn btn-primary pull-rigth btn-search' %> </td>
                <% end %>

  <br>
</div>