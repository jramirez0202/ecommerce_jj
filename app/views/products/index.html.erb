<h1>Products</h1>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Stock</th>
      <th>Description</th>
      <th>price</th>
      <th>Sku</th>
      <th>Score</th>
      <th>Producto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
        <% product.categories.each do |category| %>
      <tr>
          <td><%= product.name %></td>
          <td><%= category.name %></td>
          <td><%= product.stock %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.sku %></td>
          <td><% product.scores.sort.each do |score| %>
              <%= score.rating %>
            <% end %>
          </td>
          <td></td>
          <td><%= link_to 'Ver producto', product %></td>

          <% if current_user.role == "moderador"%>
            <td><%= link_to 'Destroy', product, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
