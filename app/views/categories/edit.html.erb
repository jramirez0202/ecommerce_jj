<div class="container ">
    <h1 class= text-center>Editing Category</h1>

    <%= form_for @category, remote: true do |form| %>

        <div class="modal-body">
          <div class="form-group">
              <%= form.text_field :name, class: "form-control input-lg", placeholder: "Nombre Categoria" %>
          </div>    

          <div class="form-group">
            <%= form.file_field :photo, class: "form-control input-lg", placeholder: "Foto Categoria"  %>
          </div>
        </div>

        <div class="modal-footer">
          <%= form.submit class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>


</div>

